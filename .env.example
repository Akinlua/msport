# BetAlert Application Configuration

# Environment: "development" or "production"
# In development mode, the browser will be visible
# In production mode, the browser will run headless
ENVIRONMENT=development

# Bet9ja Configuration
BETNAIJA_HOST=https://web.bet9ja.com
BETNAIJA_API_HOST=https://web.bet9ja.com
BETNAIJA_USERNAME=your_username
BETNAIJA_PASSWORD=your_password

# Pinnacle Configuration
PINNACLE_ODDS_HOST=https://api.pinnacle-odds.com
PINNACLE_EVENTS_API=https://swordfish-production.up.railway.app
PINNACLE_USER_ID=your_user_id

# Betting Configuration
MIN_EV=2.0                    # Minimum EV percentage to place a bet
ODDS_CHECK_INTERVAL=60        # Time in seconds between odds checks

# Stake Configuration
BET_BANKROLL=1000             # Total bankroll for Kelly stake calculation
MIN_STAKE=10                  # Minimum stake amount for any bet
MAX_STAKE=100                 # Maximum stake amount for any bet

# Selenium WebDriver Configuration
CHROME_DRIVER_PATH=/path/to/chromedriver    # Optional, will auto-detect if not provided 